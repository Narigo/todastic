{
  "output": "./output",
  "helpers": {
    "Puppeteer": {
      "url": "http://localhost",
      "show": false,
      "waitForNavigation": "networkidle0",
      "waitForAction": 500,
      "chrome": {
        "args": [
          "--no-sandbox",
          "--disable-setuid-sandbox"
        ]
      }
    }
  },
  "include": {
    "I": "./support/steps_file.js",
    "TodoList": "./support/pages/TodoList.js"
  },
  "mocha": {},
  "bootstrap": false,
  "teardown": null,
  "hooks": [],
  "gherkin": {},
  "plugins": {
    "screenshotOnFail": {
      "enabled": true
    }
  },
  "tests": "tests/*-test.js",
  "timeout": 10000,
  "name": "todastic"
}
